- title "Order Summary"

- content_for(:login) do
  = render :partial => 'users/login_status', :locals => {:user => @user}

- content_for(:head) do
  %style{:type => "text/css"}
    :sass
      #orders-box
        text-align: center
        width: 75em
        background-color: #cccccc
        padding: 0.5em
        margin: 1em auto
        table
          padding: 1em
          min-width: 75em
      #paginate-box
        margin: 1em

-content_for(:body) do
  #orders-box
    - if @user
      %h3= "Recent orders for #{@user.login}"
      #paginate-box
        = will_paginate @orders
      = render :partial => 'order_list', :locals => {:order_list => @orders}
    - else
      %em
        You are not logged in.  Order status and history is only possible for
        logged in users.


